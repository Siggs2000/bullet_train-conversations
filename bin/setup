#!/usr/bin/env bash
set -euo pipefail
IFS=$'\n\t'
set -vx

bundle install

# We need to cd into the dummy app because it uses a different Rakefile
cd test/dummy
rm -r db/migrate/*
bundle install
rake bullet_train_conversations_engine:install:migrations
rake db:reset
rake db:migrate
cd ../..

# Do any other automated setup that you need to do here
