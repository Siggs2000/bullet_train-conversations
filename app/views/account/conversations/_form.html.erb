<%= form_with(model: [:account, (@parent unless conversation.persisted?), conversation], local: true) do |form| %>
  <%= render 'shared/forms/errors', form: form %>

  <%= render 'shared/fields/date_field', form: form, method: :last_message_at, options: {autofocus: true} %>
  <%# ðŸš… super scaffolding will insert new fields above this line. %>

  <div class="form-buttons-w">
    <%= form.submit (form.object.persisted? ? t('.buttons.update') : t('.buttons.create')), class: "btn btn-primary" %>
    <% if form.object.persisted? %>
    <%= link_to t('global.buttons.cancel'), [:account, conversation], class: "btn btn-link" %>
    <% else %>
    <%= link_to t('global.buttons.cancel'), [:account, @parent, :conversations], class: "btn btn-link" %>
    <% end %>
  </div>

<% end %>
