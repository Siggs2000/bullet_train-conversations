<% unless @message.reply? %>
  <% if @conversation_style == :blog %>
    <%= turbo_stream.prepend "messages", partial: "/themes/light/comment", locals: {message: @message, next_message: nil, new_message: true} %>
  <% else %>
    <%= turbo_stream.append "messages", partial: "/themes/light/message", locals: {message: @message, next_message: nil, new_message: true} %>
  <% end %>
<% end %>
