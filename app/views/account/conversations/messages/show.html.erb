<div class="element-wrapper">
  <h6 class="element-header"><%= t('.section') %></h6>
  <%= render 'shared/notices' %>
  <div class="padded-lg">
    <div class="element-box element-box-show">
      <h5 class="form-header"><%= t('.header') %></h5>
      <div class="form-desc"><%= t('.description') %></div>


      
      <div class="form-group">
        <label class="col-form-label" for=""><%= t('conversations/messages.fields.author_name.label') %></label>
        <div>
          <%= @message.author_name %>
        </div>
      </div>
      
      <div class="form-group">
        <label class="col-form-label" for=""><%= t('conversations/messages.fields.body.label') %></label>
        <div>
          <%= @message.body %>
        </div>
      </div>
      <%# ðŸš… super scaffolding will insert new fields above this line. %>

      <div class="form-buttons-w">
        <%= link_to t('.buttons.edit'), [:edit, :account, @message], class: "btn #{first_button_primary}" if can? :edit, @message %>
        <%= link_to t('.buttons.destroy'), [:account, @message], method: :delete, class: "btn #{first_button_primary}", data: { confirm: t('.buttons.confirmations.destroy', model_locales(@message)) } if can? :destroy, @message %>
        <%= link_to t('global.buttons.back'), [:account, @conversation, :conversations, :messages], class: "btn #{first_button_primary}" %>
      </div>

    </div>

    <%# ðŸš… super scaffolding will insert new children above this line. %>

  </div>
</div>